<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Issue Tracker üõ†Ô∏è</title>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div id="container">
      <header class="flex">
        <div id="header-heading">
          <a href="/">
            <h3>Issue Tracker</h3>
          </a>
        </div>
        <button id="create-project-btn" class="primary-btn">
          Create New Project
        </button>
      </header>

      <main>
        <div id="projects-display" class="flex">
          <%- include('_projectPageProjectTile') %>
        </div>

        <div id="issues-header" class="flex">
          <% if (project.issues.length > 0) { %>
          <h3>Project issues</h3>
          <% } else { %>
          <h3>No issues added yet!</h3>
          <% } %>
          <div id="issues-header-btns" class="flex">
            <form action="/project/<%= project._id %>" method="get" class="">
              <button id="" class="primary-btn secondary-btn">
                Show All Issues
              </button>
            </form>
            <button id="filter-by-author-btn" class="primary-btn secondary-btn">
              Filter by Author
            </button>
          </div>
        </div>

        <div id="issues-display" class="flex">
          <% for (issue of project.issues) { %> <%- include('_issue') %> <% } %>
        </div>

        <div class="modal-container" id="modal-container-issue">
          <%- include('_newIssueModal') %>
        </div>

        <div class="modal-container" id="modal-container">
          <%- include('_modal') %>
        </div>

        <div id="issues-data" data="<%=JSON.stringify(project.issues)%>"></div>

        <div class="modal-container" id="modal-container-authors">
          <div class="modal">
            <h3>Please select Authors for filtering</h3>
            <form action="" id="populate-author-form">
              <div id="populate-author-div">
                <!-- populate author details using javascript -->
              </div>
              <button
                id="filter-authors-modal-btn"
                type="submit"
                onclick=""
                class="primary-btn secondary-btn mg-top-10"
              >
                Filter Issues
              </button>
            </form>
            <button
              id="filter-authors-close-modal-btn"
              class="primary-btn delete-btn mg-top-10"
            >
              Close
            </button>
          </div>
        </div>
      </main>

      <%- include('_footer') %>
      <script src="/js/home.js"></script>
      <script src="/js/projectPage.js"></script>
    </div>
  </body>
</html>
